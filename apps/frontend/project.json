{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "apollusia",
  "sourceRoot": "apps/frontend/src",
  "tags": [],
  "i18n": {
    "sourceLocale": "en-US",
    "locales": {
      "de": "apps/frontend/src/locales/messages.de.json"
    }
  },
  "targets": {
    "build": {
      "executor": "@nx/angular:application",
      "outputs": ["{options.outputPath.base}"],
      "options": {
        "outputPath": "dist/apps/frontend",
        "index": "apps/frontend/src/index.html",
        "polyfills": [
          "zone.js",
          "apps/frontend/src/polyfills.ts",
          "@angular/localize/init"
        ],
        "tsConfig": "apps/frontend/tsconfig.app.json",
        "assets": [
          "apps/frontend/src/assets",
          "apps/frontend/src/favicon.ico",
          "apps/frontend/src/manifest.webmanifest",
          "apps/frontend/src/robots.txt"
        ],
        "styles": ["apps/frontend/src/styles.scss"],
        "allowedCommonJsDependencies": ["validator"],
        "scripts": [],
        "plugins": ["apps/frontend/plugins/define-version.cjs"],
        "serviceWorker": "apps/frontend/ngsw-config.json",
        "browser": "apps/frontend/src/main.ts",
        "server": "apps/frontend/src/main.server.ts",
        "prerender": true,
        "ssr": {
          "entry": "apps/frontend/server.ts"
        },
        "localize": true,
        "i18nMissingTranslation": "error"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "1mb",
              "maximumError": "2mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all",
          "fileReplacements": [
            {
              "replace": "apps/frontend/src/environments/environment.ts",
              "with": "apps/frontend/src/environments/environment.prod.ts"
            }
          ]
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "ssr": false,
          "prerender": false,
          "namedChunks": true
        },
        "en-US": {
          "localize": ["en-US"]
        },
        "de": {
          "localize": ["de"]
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "frontend:build:production,en-US"
        },
        "development": {
          "buildTarget": "frontend:build:development,en-US"
        },
        "development-de": {
          "buildTarget": "frontend:build:development,de"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "proxyConfig": "apps/frontend/proxy.conf.json"
      },
      "continuous": true
    },
    "extract-i18n": {
      "executor": "@nx/angular:extract-i18n",
      "options": {
        "buildTarget": "frontend:build",
        "outputPath": "apps/frontend/src/locales",
        "format": "json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/frontend/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "frontend:build"
      }
    }
  }
}

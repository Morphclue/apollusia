{{ style }}
<p>Hello {{ name }}!</p>

<p>{{ participant.name }} just participated in your poll <b>{{ poll.title }}</b>!</p>

<table style="text-align: center">
    <tr>
        <th>Name</th>
        {{# each events }}
            <th>{{ date this.start undefined ../poll.timeZone }}<br/>{{ date this.end undefined ../poll.timeZone }}</th>
        {{/each}}
    </tr>
    {{#each participants}}
        <tr>
            <th>{{ this.name }}</th>
            {{#each this.participation}}
                <td class="{{ this.class }}">{{ this.icon }}</td>
            {{/each}}
        </tr>
    {{/each}}
</table>

{{#if poll.timeZone}}
    <p>All times are displayed in the timezone <b>{{ poll.timeZone }}</b>.</p>
{{/if}}

<p>
    <a class="btn" href="{{ origin }}/poll/{{ poll._id }}/participate">
        View Poll
    </a>
</p>
